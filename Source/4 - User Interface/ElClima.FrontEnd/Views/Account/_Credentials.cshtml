<form id="credentialsForm">
    <div class="text-center">
        <h3>

            <span>Credenciales <i class="fa fa-user"></i>  </span>
        </h3>
        <hr class="hr-light">
    </div>
    <div>
        <div class="md-form">
            <i class="fas fa-id-card prefix active"></i>
            <label for="dni" class="active">Dni</label>
            <input type="text" v-bind:disabled="p_personAdded" id="dni" maxlength="8" pattern="^(\(?\+?[0-9]*\)?)?[0-9_\- \(\)]*$" v-model="dni" name="dni" class="form-control">
        </div>
        <div class="md-form">
            <i class="fa fa-envelope prefix active"></i>
            <input type="email" id="email" autocomplete="off" v-model="email" name="email" maxlength="70" class="form-control">
            <label for="email" class="active">Email</label>
        </div>
        <div class="md-form">
            <i class="fa fa-lock prefix active"></i>
            <input type="password" id="contrasenia" autocomplete="off" v-model="contrasenia" name="contrasenia" maxlength="20" class="form-control">
            <label for="password" class="active">Contraseña</label>
        </div>
        <div class="md-form">
            <i class="fa fa-lock prefix active"></i>
            <input type="password" id="p_contraseniaRepetir" autocomplete="off" v-model="p_contraseniaRepetir" name="p_contraseniaRepetir" maxlength="20" class="form-control">
            <label for="passwordRepit" class="active">Repetir contraseña</label>
        </div>
    </div>
    <div v-show="p_ErrorMessage !== ''" class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-circle"></i> <strong>{{p_ErrorMessage}}</strong>
    </div> 

    <div v-show="p_ValidationCredentials.length" v-for="item in p_ValidationCredentials" class="alert alert-warning" role="alert">
        <strong>{{item}}</strong>
    </div>
    <div class="text-center mt-4">
        <button type="button" class="btn btn-danger" v-on:click="p_credentialsShowView = false; p_addressShowView=true">Volver</button>
        <button type="button" class="btn btn-success" v-bind:disabled="validDni" v-on:click="CheckPersonExist()">
            Guardar
            <span v-show="p_checkSaveRegisterProccecing" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
        </button>
    </div>
</form>   