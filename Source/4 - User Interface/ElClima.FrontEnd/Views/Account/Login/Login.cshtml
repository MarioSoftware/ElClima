@using ElClima.FrontEnd.Helpers

@{ 
    var returnUrl = Context.Request.Query["ReturnUrl"].ToString();
}


@section DelayedScripts
    {

    <script src="~/assets/plugins/jquery/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/scripts/Account/loginBinding.js" asp-append-version="true"></script>
    <script src="~/scripts/Common/validationCustom.js" asp-append-version="true"></script>
    <script src="~/scripts/Account/formLogin.validation.js" asp-append-version="true"></script>

}
    <div id="login" v-cloak="">
        <div class="card p-4 bg-success grow"> 
            <span><i class="fas fa-check"></i> <strong>Te has registrado con Exito!</strong></span> 
        </div> 
        <form id="loginForm" action="javascript:Login('@returnUrl')">
            <div class="md-form">
                <i class="fas fa-id-card prefix active"></i> 
                <input type="text" id="dni" placeholder="D.N.I" maxlength="8" pattern="^(\(?\+?[0-9]*\)?)?[0-9_\- \(\)]*$" v-model="dni" name="dni" class="form-control">
            </div> 
            <div class="md-form">
                <i class="fa fa-lock prefix active"></i>
                <input type="password" id="password" placeholder="Contraseña" autocomplete="off" v-model="password" name="password" maxlength="20" class="form-control">
            </div>
            <div v-show="p_ErrorMessage !== ''" class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle"></i> <strong>{{p_ErrorMessage}}</strong>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-indigo">
                    Iniciar sesion
                    <span v-show="p_SigningIn" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                </button>
                <hr class="hr-light mb-3 mt-4">
            </div>
        </form>
    </div>

