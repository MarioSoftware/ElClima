@using Microsoft.AspNetCore.Mvc.Rendering
@using ElClima.FrontEnd.Helpers  

<!doctype html>
<html lang="es-AR">
<head>
    <link rel="shortcut icon" type="image/ico" href="~/favicon.ico">
    <meta charset="UTF-8/ISO-8859-1" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="Author" content="people" />

    <!-- mobile settings -->
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1.0, user-scalable=0" />
    <title>El Clima - Córdoba</title>
    <!-- CORE CSS -->
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" /> 
    @*<link rel="stylesheet" type="text/css" href="~/assets/plugins/bootstrap/css/boostrap-toggle.min.css" />*@

    @RenderSection("HtmlHead", false)
    <!-- Navigation -->
    @await Html.PartialAsync("NavMenu/_NavMenu")
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        @*@await Html.PartialAsync("_HeaderAndPanelPartial")*@
        <!--     MIDDLE     -->
        <section id="middle">
            @RenderBody()
        </section>
        <!-- /MIDDLE -->
    </div>

    <!--JAVASCRIPT FILES-->
    @*<environment include="Development">
            <script src="/scripts/Vue.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="/scripts/Vue-Deploy.js"></script>
        </environment>*@
    <script src="~/assets/plugins/vuejs/dev/vue.js"></script>
    <script src="/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/assets/plugins/jquery/development/jquery-3.4.1.js"></script>

    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/assets/plugins/bootstrap/js/boostrap4-toggle.min.js"></script>*@

    @RenderSection("DelayedScripts", false)
    @Html.Raw(MasterLayoutHelper.GetDelayedJavaScriptFiles(Context))
    <script type="text/javascript">
        jQuery(document).ready(function () {
            @Html.Raw(MasterLayoutHelper.GetLinesForDocumentReadyFunction(Context))
        });
    </script>
</body>
</html>
