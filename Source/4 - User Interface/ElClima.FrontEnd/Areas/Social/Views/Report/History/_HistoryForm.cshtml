@{
    Layout = "~/Views/Shared/_Layout.cshtml";
 }

@section DelayedScripts
    {
    <script src="~/scripts/Report/History/historyBinding.js" asp-append-version="true"></script>
    <script type="text/javascript">
        new WOW().init();
    </script>
}

    <div class="history">
        <form id="historyForm">
            <div class="row justify-content-center">
                <div class="col-4 col-lg-4">
                    <div class="md-form">
                        @*<i class="fas fa-user prefix active" aria-hidden="true"></i>*@
                        <input type="text" id="descripcion" name="descripcion" v-model="descripcion" class="form-control">.
                        <i class="fas fa-images  fa-2x"></i>
                        <label for="descripcion" class="active">Descripcion</label>

                    </div> 
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-4 col-sm-12"> 
                        <h3 class="text-center text-muted">Sin Imagenes</h3> 
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-4">
                    @*<div class="card p-12 grow">*@
                    <div class="row justify-content-center">
                        <i class="fas fa-map-marker-alt fa-5x"></i>
                    </div>
                    <div class="row justify-content-center">
                        <p class="text-center">¿Donde?</p>
                    </div>
                   
                     
                    @*</div>*@
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="form-group">

                        <textarea class="form-control" id="observacion" v-model="observacion" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-6 col-lg-3">
                    <button type="button" class="btn btn-danger" v-on:click="">Cancelar</button> 
                </div>
                <div class=" col-6 col-lg-3"> 
                    <button type="button" class="btn btn-success" v-on:click="">Guardar</button>
                </div>
            </div>

             
        </form>
    </div>